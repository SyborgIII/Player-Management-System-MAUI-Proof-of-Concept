<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SiaScoreApp.Maui.Views.AddAppraisal"
             Title="AddAppraisalPage"
             Padding="60">
    <VerticalStackLayout Spacing="30">
        <Label 
            Text="Add Appraisal"
            FontSize="Header"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="AddAppraisalBtn" Text="Add Appraisal" Clicked="AddAppraisalBtn_Clicked"></Button>
        <Button x:Name="ReturnBtn" Text="Return" Clicked="ReturnBtn_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>