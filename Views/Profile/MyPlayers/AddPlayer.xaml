<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SiaScoreApp.Maui.Views.Profile.MyPlayers.AddPlayer"
             Title="AddPlayer"
             Padding="60">
    <VerticalStackLayout Spacing="30">
        <Label 
            Text="Add New Player"
            FontSize="Header"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="AddPlayerBtn" Text="Add Player" Clicked="AddPlayerBtn_Clicked"></Button>
        <Button x:Name="ReturnBtn" Text="Return to Previous Page" Clicked="ReturnBtn_Clicked"></Button>

    </VerticalStackLayout>
</ContentPage>