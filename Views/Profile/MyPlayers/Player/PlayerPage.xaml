<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SiaScoreApp.Maui.Views.PlayerPage"
             Title="PlayerPage"
             Padding="60"
             BackgroundColor="DarkCyan">
    <VerticalStackLayout Spacing="30">
 
        
        <Label x:Name="NameLabel" 
               VerticalOptions="Center" 
               FontSize="Large"
               HorizontalOptions="Center"></Label>
        <Label x:Name="PlayerTeamNameLabel" 
               VerticalOptions="Center" 
               FontSize="Default"
               HorizontalOptions="Center"></Label>
        
        <Button x:Name="EditPlayerBtn" Text="Edit Player" Clicked="EditPlayerBtn_Clicked" BackgroundColor="DarkBlue"></Button>
        <Button x:Name="ReturnBtn" Text="Return to previous page" Clicked="ReturnBtn_Clicked" BackgroundColor="DarkBlue"></Button>

    </VerticalStackLayout>
</ContentPage>